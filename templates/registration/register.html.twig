{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<main class="container-fluid">
    <header class="container-fluid p-5 text-center bg-light">
      <h1>SUBL'IMMO - Créer un utilisateur</h1>
      <h2>L'agence Immobilière 100% en ligne et accesible</h2>
    </header>

    <div class="row"> <!-- On affichera les messages d'erreurs-->
      <div class="col-8 offset-2">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }} bg-{{ label }} text-light p-3 mb-5 rounded">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
      </div>
    </div>

    <div class="row py-2">
      <h1 class="text-center">Register</h1>
      <div class="col-4 offset-4">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de Passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn btn-success">Valider</button>
        {{ form_end(registrationForm) }}
      </div>
    </div>
</main>

{% endblock %}
