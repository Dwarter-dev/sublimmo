{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<header class="container-fluid p-5 text-center bg-light">
  <h1>SUBL'IMMO - Toutes les Maisons</h1>
  <h2>L'agence Immobilière 100% en ligne et accesible</h2>
</header>

<main class="container-fluid">
  <div class="container-fluid">
    <div class="col-4 offset-4">
      <form method="post">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

          <label for="inputEmail">Email</label>
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

          <label for="inputPassword">Password</label>
          <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          {#
              Uncomment this section and add a [remember_me] (little cookie) option below your firewall to activate remember me functionality.
              See https://symfony.com/doc/current/security/remember_me.html
          #}
          <div class="checkbox mb-3">
            <label>
              <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
          </div>

          <div class="text-end">
            <button class="btn btn-primary" type="submit">Connexion</button>
          </div>
      </form>
    </div>
  </div>
</main>
{% endblock %}
