{% extends 'baseAdmin.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>Maison</th>
                <th>Afficher/Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in commentaires %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.maison.title }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">Afficher</a> <i class="fas fa-eye"></i>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a> <i class="fas fa-pen-square"></i>
                </td>
                <td>
                    {{ include('comment/_delete_form.html.twig') }}
                    <button class="btn text-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun commantaire cr√©er</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center my-5">
        <a href="{{ path('comment_new') }}" class="btn btn-success">Ajouter un commentaire</a>
    </div>
{% endblock %}
